{
    "name": "@datawrapper/render-client",
    "version": "1.7.0",
    "description": "the Node app running on each client/worker in our pdf/png/svg export render farm. Uses Pupeteer & Chromium for client-side rendering of charts. Formerlly known as \"chromeshot\" ",
    "main": "scripts/start",
    "files": [
        "src",
        "scripts",
        "config.tpl.js"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/render-client.git"
    },
    "author": "Gregor Aisch",
    "bugs": {
        "url": "https://github.com/datawrapper/render-client/issues"
    },
    "homepage": "https://github.com/datawrapper/render-client#readme",
    "dependencies": {
        "@datawrapper/orm": "^3.20.1",
        "aws-sdk": "^2.805.0",
        "fs-extra": "^9.0.1",
        "gm": "^1.23.1",
        "got": "^11.8.0",
        "json-socket": "^0.3.0",
        "mkdirp": "^1.0.4",
        "puppeteer": "^5.4.1",
        "request": "^2.88.2",
        "underscore": "^1.12.0",
        "uuid": "^8.3.1",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@ava/babel": "^1.0.1",
        "ava": "^3.13.0",
        "babel-eslint": "^10.1.0",
        "babel-plugin-module-resolver": "^4.0.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.14.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^5.0.0",
        "esm": "^3.2.25",
        "healthier": "^4.0.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.2",
        "nodemon": "^2.0.6",
        "nyc": "^15.1.0",
        "prettier": "^2.2.1",
        "tap-xunit": "^2.4.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "healthier",
            "prettier --check"
        ]
    },
    "scripts": {
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "ava --config tests-unit.config.js",
        "test:watch": "ava --config tests-unit.config.js -w",
        "test:coverage": "nyc --reporter=html --reporter=text ava --config tests-unit.config.js",
        "test:integration": "ava --config tests-integration.config.js",
        "lint": "healthier 'src/**/*.{js,html}' && prettier --check 'src/**/*.{js,html}'",
        "format": "prettier --write 'src/**/*.js'"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
