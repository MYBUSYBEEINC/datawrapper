{
    "name": "@datawrapper/schemas",
    "version": "1.13.1",
    "description": "JSON schemas for config and themes",
    "author": "Datawrapper GmbH",
    "main": "index.js",
    "scripts": {
        "format": "prettier '*.js' '**/*.js' --write",
        "lint": "prettier --check '*.js' '**/*.js' && healthier '*.js' '**/*.js'",
        "test": "ava --verbose",
        "test:watch": "ava -w",
        "build": "node scripts/build.js",
        "docs": "node scripts/generate-docs.js",
        "prepare": "husky install"
    },
    "dependencies": {
        "chalk": "^4.1.1",
        "joi": "^17.4.0"
    },
    "devDependencies": {
        "ava": "^3.15.0",
        "babel-eslint": "^10.0.2",
        "healthier": "^4.0.0",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.1"
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "ava": {
        "files": [
            "./*.test.mjs",
            "./**/*.test.mjs"
        ]
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
