{
    "name": "@datawrapper/render-client",
    "version": "1.7.0",
    "description": "the Node app running on each client/worker in our pdf/png/svg export render farm. Uses Pupeteer & Chromium for client-side rendering of charts. Formerlly known as \"chromeshot\" ",
    "main": "scripts/start",
    "files": [
        "src",
        "scripts",
        "config.tpl.js"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/render-client.git"
    },
    "author": "Gregor Aisch",
    "bugs": {
        "url": "https://github.com/datawrapper/render-client/issues"
    },
    "homepage": "https://github.com/datawrapper/render-client#readme",
    "dependencies": {
        "@datawrapper/orm": "^3.14.2",
        "aws-sdk": "^2.666.0",
        "chalk": "^2.4.2",
        "gm": "^1.23.1",
        "got": "^11.0.3",
        "json-socket": "^0.3.0",
        "mkdirp": "^0.5.1",
        "puppeteer": "^3.0.2",
        "request": "^2.88.2",
        "underscore": "^1.10.2",
        "uuid": "^3.4.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "ava": "^3.8.1",
        "babel-eslint": "^10.1.0",
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "healthier": "^3.3.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.2.1",
        "nodemon": "^1.19.4",
        "nyc": "^15.0.1",
        "prettier": "^1.19.1",
        "tap-xunit": "^2.4.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ]
    },
    "scripts": {
        "test": "ava",
        "test:watch": "ava -w",
        "test:coverage": "nyc --reporter=html --reporter=text ava",
        "lint": "healthier 'src/**/*.{js,html}' && prettier --check 'src/**/*.{js,html}'",
        "format": "prettier --write 'src/**/*.js'"
    },
    "ava": {
        "files": [
            "src/tests/**.test.js"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
