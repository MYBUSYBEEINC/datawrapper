{
    "name": "@datawrapper/browser-test",
    "version": "1.0.0",
    "description": "",
    "homepage": "https://github.com/datawrapper/browser-test#readme",
    "bugs": {
        "url": "https://github.com/datawrapper/browser-test/issues"
    },
    "license": "ISC",
    "author": "",
    "main": "index.js",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "test": "ava --tap | tap-xunit > ~/reports/ava.xml"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/browser-test.git"
    },
    "dependencies": {
        "jpeg-js": "^0.3.4",
        "pixelmatch": "^4.0.2",
        "pngjs": "^3.3.3",
        "request": "^2.88.0",
        "tap-xunit": "^2.3.0"
    },
    "devDependencies": {
        "ava": "^1.3.1",
        "babel-eslint": "^10.0.1",
        "healthier": "^2.0.0",
        "prettier": "^1.16.4"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
