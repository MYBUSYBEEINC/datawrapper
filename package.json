{
    "name": "@datawrapper/blocks",
    "version": "0.9.1",
    "description": "Collection of charting primitives used and developed by Datawrapper.",
    "keywords": [
        "visualisation",
        "d3",
        "data",
        "viz"
    ],
    "homepage": "https://github.com/datawrapper/blocks#readme",
    "bugs": {
        "url": "https://github.com/datawrapper/blocks/issues"
    },
    "license": "UNLICENSED",
    "author": "Datawrapper GmbH",
    "contributors": [
        {
            "name": "Fabian Gündel"
        },
        {
            "name": "Gregor Aisch"
        }
    ],
    "files": [
        "lib",
        "dist"
    ],
    "main": "dist/index.js",
    "scripts": {
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "format": "prettier 'src/**/*.js' --write",
        "prepublishOnly": "npm test && npm run build && npm run bundle",
        "build:js": "node scripts/compile.js",
        "build:css": "postcss src/**/*.css -d lib",
        "build": "rm -rf lib/* && npm run build:js & npm run build:css",
        "bundle:js": "microbundle -i lib/index.js",
        "bundle:css": "node scripts/compile-css.js | postcss > dist/index.css",
        "bundle": "rm -rf dist/* && npm run bundle:js && npm run bundle:css",
        "test": "ava --verbose",
        "test:watch": "ava --watch",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "lint:js": "eslint src",
        "lint:css": "stylelint src/**/*.css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/blocks.git"
    },
    "dependencies": {
        "budu": "1.0.0",
        "d3-jetpack": "^2.0.20",
        "d3-scale": "2.2.2",
        "d3-selection": "1.4.0",
        "lodash": "4.17.11"
    },
    "devDependencies": {
        "@babel/core": "~7.4.0",
        "@storybook/addon-actions": "5.1.0-alpha.39",
        "@storybook/addon-knobs": "5.1.0-alpha.39",
        "@storybook/html": "5.1.0-alpha.39",
        "ava": "1.4.0",
        "babel-eslint": "~10.0.1",
        "babel-loader": "~8.0.5",
        "browser-env": "~3.2.6",
        "buble": "~0.19.7",
        "d3-array": "2.0.3",
        "d3-drag": "^1.2.3",
        "diffable-html": "~4.0.0",
        "esm": "~3.2.20",
        "fs-extra": "~7.0.1",
        "glob": "~7.1.3",
        "healthier": "~2.0.0",
        "humps": "~2.0.1",
        "husky": "~1.3.1",
        "lint-staged": "~8.1.5",
        "microbundle": "^0.11.0",
        "postcss-cli": "~6.1.2",
        "postcss-import": "~12.0.1",
        "postcss-loader": "~3.0.0",
        "postcss-preset-env": "~6.6.0",
        "prettier": "~1.16.4",
        "raf": "~3.4.1",
        "stylelint": "~9.10.1",
        "stylelint-config-standard": "~18.2.0",
        "tap-xunit": "~2.3.0"
    },
    "peerDependencies": {
        "d3-array": "1.2.4 || ^2.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "umd:main": "dist/index.umd.js",
    "module": "dist/index.mjs",
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test"
        }
    },
    "ava": {
        "snapshotDir": "./test/__SNAPSHOTS__",
        "require": [
            "esm",
            "./test/helpers/setup-browser-env.js"
        ]
    },
    "stylelint": {
        "extends": "stylelint-config-standard"
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ],
        "*.css": [
            "stylelint --fix",
            "git add"
        ]
    },
    "browserslist": [
        "last 2 versions",
        "not IE 10"
    ]
}
