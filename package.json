{
    "name": "@datawrapper/plugin-visualization-bar-chart",
    "version": "1.7.9",
    "scripts": {
        "format": "prettier 'src/controls/**/*.{js,html}' --write",
        "lint": "prettier --check 'src/controls/**/*.{js,html}' && healthier 'src/controls/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "compile": "npm run build"
    },
    "dependencies": {
        "@datawrapper/raphael-chart": "^1.0.2",
        "@datawrapper/shared": "^0.32.5",
        "chroma-js": "^2.1.0",
        "d3-scale": "^2.2.2",
        "dayjs": "^1.10.4"
    },
    "devDependencies": {
        "@datawrapper/chart-core": "^8.6.1",
        "@datawrapper/controls": "^2.34.0-rc1",
        "@rollup/plugin-alias": "^3.1.1",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.5.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-html": "^6.0.2",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "healthier": "^4.0.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "rollup": "^2.23.0",
        "rollup-plugin-svelte": "^5.2.3",
        "rollup-plugin-terser": "^6.1.0",
        "svelte": "^2.16.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,html}": [
            "prettier --write",
            "healthier"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    }
}
