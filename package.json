{
    "name": "d3-maps-build",
    "version": "1.0.0",
    "scripts": {
        "format": "prettier 'src/**/*.{js,html}' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "test": "ava"
    },
    "dependencies": {
        "@hapi/boom": "^9.1.0",
        "@hapi/joi": "17.1.1",
        "d3-array": "^1.2.1",
        "d3-collection": "^1.0.4",
        "d3-color": "^1.4.1",
        "d3-format": "^1.4.5",
        "d3-geo": "^1.12.1",
        "d3-geo-projection": "^2.9.0",
        "d3-jetpack": "^2.0.19",
        "d3-scale": "^2.2.2",
        "d3-selection": "^1.4.2",
        "d3-transition": "^1.3.2",
        "d3-zoom": "^1.8.3",
        "got": "^10.7.0",
        "numeral": "^2.0.6",
        "topojson": "^3.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.10.0",
        "@babel/plugin-transform-runtime": "^7.10.0",
        "@babel/preset-env": "^7.8.4",
        "@datawrapper/blocks": "^0.14.12",
        "@datawrapper/chart-core": "^8.18.12",
        "@datawrapper/controls": "^2.27.1",
        "@datawrapper/shared": "^0.27.6",
        "@rollup/plugin-alias": "^3.1.1",
        "@rollup/plugin-babel": "^5.0.2",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^15.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "@types/babel__core": "^7.1.9",
        "ava": "^2.4.0",
        "babel-eslint": "^10.1.0",
        "babel-plugin-transform-async-to-promises": "^0.8.15",
        "d3-hexbin": "^0.2.2",
        "d3-polygon": "^1.0.6",
        "d3-quadtree": "^1.0.7",
        "dayjs": "^1.8.13",
        "eslint": "^5.16.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-html": "^6.1.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "healthier": "^4.0.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.2.1",
        "lodash-es": "^4.17.15",
        "prettier": "^1.19.1",
        "rollup": "^2.27.0",
        "rollup-plugin-svelte": "^5.2.3",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-watch": "^4.3.1",
        "svelte": "^2.16.1",
        "svelte-transitions": "^1.2.0",
        "topojson-client": "^3.0.0",
        "topojson-simplify": "^3.0.3",
        "underscore": "^1.11.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "prettier --write",
                "healthier",
                "git add"
            ]
        },
        "ignore": [
            "static/*"
        ]
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "@tivac/svelte/property-ordering": "off",
            "@tivac/svelte/onupdate": "off"
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "ava": {
        "require": [
            "esm"
        ],
        "files": [
            "./src/*.test.js"
        ],
        "sources": [
            "./*.{js,svelte}"
        ]
    }
}
