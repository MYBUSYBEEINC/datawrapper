{
    "name": "@datawrapper/plugin-tables",
    "version": "2.0.0",
    "description": "One table to rule them all, powered by Svelte",
    "keywords": [],
    "license": "ISC",
    "author": "Datawrapper GmbH",
    "main": "index.js",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "rollup -cw",
        "build": "rollup -c"
    },
    "dependencies": {
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ],
        "ignore": [
            "*.min.js",
            "**/vendor/**/.js",
            "static/*.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
