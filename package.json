{
    "name": "@datawrapper/plugin-subscriptions",
    "scripts": {
        "format": "prettier 'src/{v2,v3}/**/*.{js,html}' --write",
        "lint": "prettier --check 'src/{v2,v3}/**/*.{js,html}' && healthier 'src/{v2,v3}/**/*.{js,html}'",
        "build:v2": "cd src/v2 && npm run build",
        "dev:v2": "cd src/v2 && npm run dev",
        "build:v3": "cd src/v3 && npm run build",
        "dev:v3": "cd src/v3 && npm run dev",
        "build": "npm run build:v2 && npm run build:v3"
    },
    "dependencies": {
        "@hapi/boom": "^9.0.0",
        "@hapi/joi": "^17.1.0",
        "chargebee": "^2.5.6",
        "form-data": "^3.0.0",
        "got": "^10.7.0",
        "lodash": "4.17.15",
        "node-fetch": "^2.6.0",
        "numeral": "^2.0.6"
    },
    "devDependencies": {
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.1.0",
        "eslint-plugin-html": "^6.0.0",
        "healthier": "^3.3.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "git add"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "@tivac/svelte/property-ordering": "off"
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    }
}
