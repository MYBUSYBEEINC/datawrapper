{
    "name": "@datawrapper/service-utils",
    "version": "1.2.2",
    "description": "Shared functions used throughout Datawrapper's server-side node components",
    "license": "ISC",
    "author": "Datawrapper GmbH",
    "main": "index.js",
    "scripts": {
        "test": "ava --verbose",
        "lint": "prettier --check '**/*.js' && healthier '**/*.js'",
        "format": "prettier '**/*.js' --write",
        "test:watch": "ava --watch",
        "prepublishOnly": "npm test"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:datawrapper/service-utils.git"
    },
    "dependencies": {
        "@hapi/boom": "^9.1.0",
        "assign-deep": "^1.0.1",
        "bcryptjs": "^2.4.3",
        "humps": "^2.0.1",
        "lodash": "^4.17.20",
        "nanoid": "^3.1.22"
    },
    "devDependencies": {
        "ava": "^2.4.0",
        "babel-eslint": "^10.1.0",
        "browser-env": "^3.3.0",
        "eslint": "^7.25.0",
        "esm": "^3.2.25",
        "healthier": "^4.0.0",
        "prettier": "^2.2.1"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    },
    "ava": {
        "snapshotDir": "./test/__SNAPSHOTS__",
        "require": [
            "esm"
        ],
        "helpers": [
            "**/helpers/**/*",
            "**/fixtures/**/*"
        ]
    }
}
