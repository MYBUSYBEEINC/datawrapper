{
    "scripts": {
        "format": "prettier 'src/**/*.{js,html}' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -cw"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 130,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "name": "@datawrapper/plugin-locator-maps",
    "author": "Datawrapper GmbH",
    "version": "1.2.2",
    "devDependencies": {
        "@tivac/eslint-plugin-svelte": "^1.2.1",
        "@turf/rewind": "^5.1.5",
        "babel-eslint": "^10.0.1",
        "eslint-plugin-html": "^5.0.3",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "less": "^3.9.0",
        "lint-staged": "^8.1.4",
        "mapbox-gl": "^0.48.0",
        "prettier": "^1.16.4",
        "rollup": "^1.7.0",
        "rollup-plugin-buble": "^0.19.6",
        "rollup-plugin-commonjs": "^9.2.0",
        "rollup-plugin-jscc": "^1.0.0",
        "rollup-plugin-node-resolve": "^4.0.0",
        "rollup-plugin-svelte": "^4.3.2",
        "serve": "^10.1.2"
    },
    "dependencies": {
        "@datawrapper/blocks": "^0.8.0",
        "@datawrapper/controls": "^2.6.1",
        "@datawrapper/shared": "^0.8.2",
        "@turf/area": "^6.0.1",
        "@turf/bbox": "^6.0.1",
        "@turf/bbox-clip": "^6.0.3",
        "@turf/boolean-point-in-polygon": "^6.0.1",
        "@turf/boolean-within": "^6.0.1",
        "@turf/buffer": "^5.1.5",
        "@turf/difference": "^6.0.0",
        "@turf/great-circle": "^5.1.5",
        "@turf/length": "^6.0.2",
        "@turf/simplify": "^5.1.5",
        "@turf/union": "^5.1.5",
        "cheerio": "^1.0.0-rc.2",
        "chroma-js": "^1.4.1",
        "d3-array": "^1.2.4",
        "d3-color": "^1.2.3",
        "d3-geo": "^1.11.3",
        "d3-geo-projection": "^2.5.1",
        "d3-interpolate": "^1.3.2",
        "d3-jetpack": "^2.0.19",
        "d3-scale": "^2.2.2",
        "d3-selection": "^1.4.0",
        "geojson-validation": "^0.2.1",
        "json-size": "^1.0.0",
        "martinez-polygon-clipping": "^0.5.0",
        "moment": "^2.24.0",
        "node-extend": "*",
        "node.extend": "^2.0.2",
        "polylabel": "^1.0.2",
        "rfc7946-to-d3": "^1.0.1",
        "rollup-plugin-alias": "^1.5.1",
        "rollup-plugin-json": "^3.1.0",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-string": "^2.0.2",
        "rollup-plugin-terser": "^4.0.4",
        "svelte": "^2.16.1",
        "svelte-upgrade": "^1.0.14",
        "svg-path-bounds": "^1.0.1",
        "topojson-client": "^3.0.0",
        "topojson-server": "^3.0.0",
        "underscore-es": "^1.9.8"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,html}": [
                "prettier --write",
                "healthier",
                "git add"
            ]
        },
        "ignore": [
            "*.min.js",
            "**/vendor/**/.js",
            "static/*.js",
            "www/static/js/svelte/**/*.js"
        ]
    }
}
