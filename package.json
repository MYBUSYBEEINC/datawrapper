{
    "name": "@datawrapper/plugin-subscriptions",
    "author": "Datawrapper GmbH",
    "scripts": {
        "format": "prettier 'src/{v2,v3}/**/*.js' --write",
        "lint": "healthier 'src/{v2,v3}/**/*.{js,html}' && prettier --check 'src/{v2,v3}/**/*.js'",
        "build:v2": "cd src/v2 && npm run build",
        "dev:v2": "cd src/v2 && npm run dev",
        "build:v3": "cd src/v3 && npm run build",
        "dev:v3": "cd src/v3 && npm run dev",
        "build": "npm run build:v2 && npm run build:v3"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:datawrapper/plugin-subscriptions.git"
    },
    "dependencies": {
        "@hapi/boom": "^9.0.0",
        "chargebee": "^2.5.6",
        "form-data": "^3.0.0",
        "got": "^10.7.0",
        "lodash": "4.17.15",
        "node-fetch": "^2.6.0",
        "numeral": "^2.0.6"
    },
    "devDependencies": {
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.0.1",
        "eslint": "^6.6.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-standard": "^4.0.1",
        "healthier": "^3.2.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1"
    },
    "peerDependencies": {
        "joi": "17.x"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "no-unused-vars": "warn",
            "@tivac/svelte/property-ordering": "off",
            "@tivac/svelte/onupdate": "off"
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git rev-parse HEAD > .githead && git add .githead"
        }
    },
    "lint-staged": {
        "*.js": [
            "git add"
        ]
    }
}
