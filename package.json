{
    "name": "@datawrapper/admin-users",
    "version": "1.0.0",
    "description": "Datawrapper plugin for managing users",
    "homepage": "https://github.com/datawrapper/plugin-admin-users#readme",
    "author": "Simon Jockers",
    "main": "static/admin-users.js",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "test": "ava",
        "test:watch": "ava --watch --verbose"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/plugin-admin-users.git"
    },
    "dependencies": {
        "@datawrapper/controls": "^2.26.13",
        "@datawrapper/shared": "^0.27.6",
        "nanoid": "^3.1.12",
        "query-string": "^6.4.2",
        "sinon": "^7.3.2"
    },
    "devDependencies": {
        "@rollup/plugin-buble": "^0.21.1",
        "@rollup/plugin-commonjs": "^15.0.0",
        "@rollup/plugin-json": "^4.0.2",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@rollup/plugin-replace": "^2.3.3",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "ava": "^1.4.1",
        "babel-eslint": "^10.1.0",
        "browser-env": "^3.2.6",
        "cash-dom": "^3.1.0",
        "dayjs": "^1.8.14",
        "eslint-plugin-html": "^6.1.0",
        "esm": "^3.2.22",
        "healthier": "^4.0.0",
        "husky": "^1.3.1",
        "less": "^3.9.0",
        "lint-staged": "^8.1.5",
        "pirates": "^4.0.1",
        "prettier": "^1.17.0",
        "rollup": "^2.27.0",
        "rollup-plugin-svelte": "^6.0.1",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "^2.16.1",
        "svelte-transitions": "^1.2.0",
        "tap-xunit": "^2.4.1",
        "underscore-es": "^1.9.8"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,html}": [
                "prettier --write",
                "healthier",
                "git add"
            ]
        },
        "ignore": [
            "static/**/*.js"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "ava": {
        "require": [
            "esm",
            "./test/helpers/setup-browser-env.js",
            "./test/helpers/setup-i18n.js",
            "./test/helpers/setup-svelte-compiler.js"
        ],
        "files": [
            "./src/**/*.test.js"
        ],
        "sources": [
            "./src/**/*.{js,html}"
        ]
    }
}
