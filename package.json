{
    "name": "@datawrapper/plugin-tables",
    "version": "2.0.0",
    "description": "One table to rule them all, powered by Svelte",
    "keywords": [],
    "license": "ISC",
    "author": "Datawrapper GmbH",
    "main": "index.js",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "test": "echo \"Error: no test specified\" && exit 1",
        "render-dev": "cd src/render && npm run dev",
        "render-build": "cd src/render && npm run build",
        "controls-dev": "cd src/controls && npm run dev",
        "controls-build": "cd src/controls && npm run build",
        "dev": "npm run controls-dev & npm run render-dev",
        "build": "npm run controls-build && npm run render-build"
    },
    "dependencies": {},
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run build && git add static/*"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ],
        "ignore": [
            "*.min.js",
            "**/vendor/**/.js",
            "static/*.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    },
    "devDependencies": {
        "eslint-plugin-svelte3": "^1.0.0",
        "husky": "^2.1.0"
    }
}
