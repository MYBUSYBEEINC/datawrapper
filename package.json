{
  "name": "@datawrapper/crons",
  "author": "Datawrapper GmbH",
  "version": "1.2.0",
  "description": "A collection of tasks that our server performs regularly in the background",
  "main": "src/index.js",
  "scripts": {
    "format": "prettier src/**/*.js --write && eslint src --fix",
    "lint": "eslint src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "scripts/install",
    "postupgrade": "scripts/install",
    "dev": "nodemon src/index.js",
    "start": "datawrapper-crons",
    "sync": "datawrapper-orm-sync"
  },
  "bin": {
    "datawrapper-crons": "scripts/start"
  },
  "files": [
    "src",
    "scripts",
    "config.tpl.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datawrapper/datawrapper-crons.git"
  },
  "dependencies": {
    "@datawrapper/orm": "^1.3.0",
    "d3-array": "^2.0.3",
    "lodash.shuffle": "^4.2.0",
    "mysql2": "^1.6.4",
    "node-cron": "^2.0.3",
    "sequelize": "^4.42.0",
    "underscore": "^1.9.1",
    "winston": "^3.2.0"
  },
  "bugs": {
    "url": "https://github.com/datawrapper/datawrapper-crons/issues"
  },
  "homepage": "https://github.com/datawrapper/datawrapper-crons#readme",
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "nodemon": "^1.18.7",
    "prettier": "^1.16.1"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "semi": true,
    "printWidth": 100,
    "singleQuote": true
  }
}