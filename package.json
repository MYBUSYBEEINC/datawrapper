{
    "name": "@datawrapper/chart-tests",
    "version": "1.0.0",
    "scripts": {
        "main": "ava --verbose --config chart-tests.config.js src/main.js",
        "test": "ava",
        "test:watch": "ava -w",
        "lint": "healthier 'src/**/*.js' && prettier --check 'src/**/*.js'",
        "format": "prettier --write 'src/**/*.js'"
    },
    "author": "",
    "license": "UNLICENSED",
    "dependencies": {
        "got": "^10.7.0",
        "pixelmatch": "^5.1.0",
        "tap-xunit": "^2.4.1",
        "yargs": "^15.3.1"
    },
    "devDependencies": {
        "@ava/babel": "^1.0.1",
        "ava": "^3.5.1",
        "babel-eslint": "^10.1.0",
        "esm": "^3.2.25",
        "healthier": "^3.3.0",
        "husky": "~2.4.1",
        "import-sort-style-eslint": "^6.0.0",
        "lint-staged": "^8.2.1",
        "prettier": "^2.0.2",
        "prettier-plugin-import-sort": "0.0.3"
    },
    "ava": {
        "require": [
            "esm"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "off"
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "sort-imports": [
                "error"
            ]
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "prettier --check",
            "healthier",
            "git add"
        ]
    }
}
