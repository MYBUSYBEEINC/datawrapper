{
    "name": "@datawrapper/plugin-subscriptions",
    "scripts": {
        "format": "prettier 'src/**/*.{js,html}' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w"
    },
    "dependencies": {
        "@hapi/boom": "^9.0.0",
        "@hapi/joi": "^17.1.0",
        "chargebee": "^2.5.6",
        "form-data": "^3.0.0",
        "got": "^10.7.0",
        "node-fetch": "^2.6.0",
        "numeral": "^2.0.6"
    },
    "devDependencies": {
        "@babel/core": "^7.8.6",
        "@babel/preset-env": "^7.8.4",
        "@datawrapper/controls": "^2.13.1",
        "@datawrapper/shared": "^0.23.0",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-json": "^4.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.1.0",
        "babel-plugin-transform-async-to-promises": "^0.8.15",
        "eslint-plugin-html": "^6.0.0",
        "healthier": "^3.3.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1",
        "rollup": "^1.32.0",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-svelte": "^5.1.1",
        "rollup-plugin-terser": "^5.2.0",
        "svelte": "^2.7.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "git add"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "@tivac/svelte/property-ordering": "off"
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    }
}
