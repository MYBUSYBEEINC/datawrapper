{
    "name": "@datawrapper/plugin-visualization-pie-chart",
    "version": "1.8.0",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "healthier 'src/**/*.{js,html}' && prettier --check 'src/**/*.js'",
        "build": "rollup -c",
        "dev": "rollup -c -w"
    },
    "devDependencies": {
        "@datawrapper/chart-core": "^8.18.9",
        "@datawrapper/controls": "^2.34.0",
        "@datawrapper/raphael-chart": "^1.0.0",
        "@datawrapper/shared": "^0.27.6",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.0.1",
        "eslint": "^7.5.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-html": "^6.0.2",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "healthier": "^4.0.0",
        "numeral": "^2.0.6",
        "prettier": "^1.18.2",
        "rollup": "^2.23.0",
        "rollup-plugin-svelte": "^5.2.3",
        "rollup-plugin-terser": "^6.1.0",
        "svelte": "^2.16.1",
        "underscore-es": "^1.9.8"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "eqeqeq": "warn",
            "no-use-before-define": "warn"
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "dependencies": {
        "svelte": "^2.16.1"
    }
}
