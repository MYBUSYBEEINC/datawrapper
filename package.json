{
    "name": "@datawrapper/blocks",
    "version": "1.0.0-beta.5",
    "description": "Collection of charting primitives used and developed by Datawrapper.",
    "keywords": [
        "visualisation",
        "d3",
        "data",
        "viz"
    ],
    "homepage": "https://github.com/datawrapper/blocks#readme",
    "bugs": {
        "url": "https://github.com/datawrapper/blocks/issues"
    },
    "license": "UNLICENSED",
    "author": "Datawrapper GmbH",
    "contributors": [
        {
            "name": "Fabian GÃ¼ndel"
        },
        {
            "name": "Gregor Aisch"
        }
    ],
    "files": [
        "dist",
        "lib",
        "src"
    ],
    "main": "lib/index.js",
    "scripts": {
        "lint": "prettier --check 'src/**/*.{js,html,svelte}' && healthier 'src/**/*.{js,html,svelte}'",
        "format": "prettier 'src/**/*.{js,svelte}' --write",
        "prepublishOnly": "npm test && npm run build",
        "build:js": "node scripts/compile.js",
        "build:css": "postcss src/**/*.css -d lib",
        "build": "rm -rf lib/* && npm run build:js & npm run build:css && npm run rollup",
        "test": "ava --verbose",
        "test:watch": "ava --watch",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "lint:js": "eslint src",
        "lint:css": "stylelint src/**/*.css",
        "rollup": "rollup -c",
        "dev": "rollup -c -w"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/blocks.git"
    },
    "dependencies": {
        "@datawrapper/shared": "^0.27.6",
        "budu": "1.0.0",
        "d3-array": "^2.3.1",
        "d3-color": "^1.2.3",
        "d3-interpolate": "^1.3.2",
        "d3-jetpack": "^2.0.20",
        "d3-scale": "^3.0.0",
        "d3-selection": "1.4.0",
        "lodash": "^4.17.20"
    },
    "devDependencies": {
        "ava": "2.4.0",
        "@babel/core": "~7.11.6",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^12.0.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@storybook/addon-actions": "6.0.26",
        "@storybook/addon-knobs": "6.0.26",
        "@storybook/html": "6.0.26",
        "babel-eslint": "~10.1.0",
        "babel-loader": "~8.1.0",
        "browser-env": "~3.3.0",
        "buble": "^0.20.0",
        "chroma-js": "^2.1.0",
        "d3-axis": "^2.0.0",
        "d3-drag": "~2.0.0",
        "d3-geo": "^2.0.1",
        "d3-random": "^2.2.2",
        "d3-shape": "^2.0.0",
        "deepmerge": "^4.2.2",
        "diffable-html": "~4.0.0",
        "eslint": "^7.11.0",
        "eslint-plugin-svelte3": "^2.7.3",
        "esm": "~3.2.25",
        "fs-extra": "~9.0.1",
        "glob": "~7.1.6",
        "healthier": "~4.0.0",
        "humps": "~2.0.1",
        "husky": "~4.3.0",
        "lint-staged": "~10.4.0",
        "postcss-cli": "~8.1.0",
        "postcss-import": "~12.0.1",
        "rollup": "^2.10.9",
        "rollup-plugin-postcss": "^3.1.2",
        "rollup-plugin-svelte": "^5.2.2",
        "rollup-plugin-terser": "^6.1.0",
        "svelte": "^3.23.0",
        "postcss-loader": "~4.0.4",
        "postcss-preset-env": "~6.7.0",
        "prettier": "~2.1.2",
        "prettier-plugin-svelte": "^1.1.0",
        "raf": "~3.4.1",
        "seedrandom": "^3.0.5",
        "stylelint": "~13.7.2",
        "stylelint-config-standard": "~20.0.0",
        "tap-xunit": "~2.4.1",
        "topojson": "^3.0.2",
        "topojson-client": "^3.1.0"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "plugins": [
            "svelte3"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.svelte"
                ],
                "processor": "svelte3/svelte3",
                "rules": {
                    "import/first": "off"
                }
            }
        ],
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "prefer-const": "off"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test"
        }
    },
    "ava": {
        "snapshotDir": "./test/__SNAPSHOTS__",
        "require": [
            "esm",
            "./test/helpers/setup-browser-env.js"
        ],
        "helpers": [
            "**/helpers/**/*",
            "**/fixtures/**/*"
        ]
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "indentation": 4
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier"
        ],
        "*.css": [
            "stylelint --fix"
        ]
    },
    "browserslist": [
        "last 2 versions",
        "not IE 10"
    ]
}
