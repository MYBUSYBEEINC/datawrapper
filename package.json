{
  "name": "@datawrapper/blocks",
  "version": "0.0.6",
  "description": "Collection of charting primitives used and developed by Datawrapper.",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepublishOnly": "npm test && npm run build",
    "build:js": "node scripts/compile.js",
    "build:css": "postcss src/**/*.css -d lib",
    "build": "rm -rf lib/* && npm run build:js & npm run build:css",
    "test": "ava --verbose",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint:js": "eslint src",
    "lint:css": "stylelint src/**/*.css",
    "lint": "npm run lint:js && npm run lint:css",
    "format": "prettier src/**/*.js --write && eslint src --fix"
  },
  "browserslist": [
    "last 2 versions",
    "not IE 10"
  ],
  "ava": {
    "snapshotDir": "./test/__SNAPSHOTS__",
    "require": [
      "esm",
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "semi": true,
    "printWidth": 100,
    "singleQuote": true
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datawrapper/blocks.git"
  },
  "keywords": [
    "visualisation",
    "d3",
    "data",
    "viz"
  ],
  "author": "Fabian GÃ¼ndel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/datawrapper/blocks/issues"
  },
  "homepage": "https://github.com/datawrapper/blocks#readme",
  "dependencies": {
    "d3": "5.7.0",
    "lodash": "4.17.11"
  },
  "devDependencies": {
    "@babel/core": "~7.2.2",
    "@storybook/html": "~4.1.6",
    "ava": "1.0.1",
    "babel-loader": "~8.0.5",
    "browser-env": "~3.2.5",
    "buble": "~0.19.6",
    "diffable-html": "~4.0.0",
    "eslint": "~5.12.0",
    "eslint-config-standard": "~12.0.0",
    "eslint-plugin-import": "~2.14.0",
    "eslint-plugin-node": "~8.0.1",
    "eslint-plugin-promise": "~4.0.1",
    "eslint-plugin-standard": "~4.0.0",
    "esm": "~3.0.84",
    "fs-extra": "~7.0.1",
    "glob": "~7.1.3",
    "husky": "~1.3.1",
    "lint-staged": "~8.1.0",
    "postcss-cli": "~6.1.1",
    "postcss-loader": "~3.0.0",
    "postcss-preset-env": "~6.5.0",
    "prettier": "~1.15.3",
    "raf": "~3.4.1",
    "stylelint": "~9.9.0",
    "stylelint-config-standard": "~18.2.0",
    "tap-xunit": "^2.3.0"
  }
}
