{
    "name": "@datawrapper/plugin-export-image",
    "author": "Datawrapper GmbH",
    "version": "1.1.0",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "lint": "healthier 'src/**/*.{js,html}' && prettier --check 'src/**/*.{js,html}'",
        "lint:css": "stylelint 'src/**/*.css'",
        "format": "prettier --write 'src/**/*.{js,html,css}'"
    },
    "dependencies": {
        "@datawrapper/controls": "^2.33.11",
        "@datawrapper/shared": "^0.27.6",
        "arg": "^2.0.0",
        "blob-stream": "^0.1.3",
        "btoa": "^1.2.1",
        "chroma-js": "^1.3.7",
        "data-uri-to-buffer": "^2.0.2",
        "downloadjs": "^1.4.7",
        "queue-async": "^1.2.1",
        "svelte": "^2.7.0",
        "underscore-es": "^1.9.8"
    },
    "devDependencies": {
        "@babel/plugin-transform-runtime": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "@rollup/plugin-babel": "^5.1.0",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.1.0",
        "eslint-plugin-html": "^6.0.2",
        "healthier": "^4.0.0",
        "husky": "^2.4.1",
        "import-sort-style-eslint": "^6.0.0",
        "lint-staged": "^8.2.1",
        "prettier": "^2.0.5",
        "prettier-plugin-import-sort": "0.0.4",
        "rollup": "^2.22.1",
        "rollup-plugin-node-globals": "^1.4.0",
        "rollup-plugin-svelte": "^5.2.3",
        "rollup-plugin-terser": "^6.1.0",
        "stylelint": "^13.6.1",
        "stylelint-config-standard": "^20.0.0"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "sort-imports": [
                "error"
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "indentation": 4
        }
    },
    "lint-staged": {
        "src/**/*.{js,html}": [
            "prettier --check",
            "healthier",
            "git add"
        ],
        "src/**/*.css": [
            "stylelint",
            "git add"
        ]
    }
}
