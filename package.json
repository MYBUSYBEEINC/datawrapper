{
    "name": "@datawrapper/plugin-export-pdf",
    "author": "Datawrapper GmbH",
    "version": "2.3.0",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "build:settings": "cd src/settings && npm run build",
        "dev:settings": "cd src/settings && npm run dev",
        "test": "ava",
        "test:watch": "ava -w",
        "test:coverage": "nyc --reporter=html --reporter=text ava",
        "lint": "healthier 'api.js src/**/*.{js,html}' && prettier --check api.js  'src/**/*.js'",
        "format": "prettier --write api.js  'src/**/*.js'"
    },
    "dependencies": {
        "@datawrapper/controls": "^2.26.13",
        "@datawrapper/shared": "^0.27.6",
        "@datawrapper/twemoji-svg": "^1.0.0",
        "@hapi/boom": "^8.0.1",
        "@hapi/joi": "^17.1.1",
        "aws-sdk": "^2.625.0",
        "file-api": "^0.10.4",
        "lodash": "^4.17.19",
        "nanoid": "^2.1.11",
        "queue": "^6.0.1",
        "regenerator-runtime": "^0.13.5",
        "request": "^2.88.2",
        "ssh2-sftp-client": "^4.3.1"
    },
    "devDependencies": {
        "@ava/babel": "^1.0.1",
        "@babel/plugin-proposal-unicode-property-regex": "^7.10.4",
        "@babel/plugin-transform-runtime": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "@rollup/plugin-babel": "^5.1.0",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "@rollup/plugin-replace": "^2.3.3",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "arg": "^2.0.1",
        "ava": "^3.5.1",
        "babel-eslint": "^10.1.0",
        "babel-plugin-module-resolver": "^4.0.0",
        "babel-plugin-transform-async-to-promises": "^0.8.15",
        "blob-stream": "^0.1.3",
        "browser-env": "^3.3.0",
        "btoa": "^1.2.1",
        "chroma-js": "^1.4.1",
        "data-uri-to-buffer": "^2.0.2",
        "downloadjs": "^1.4.7",
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "esm": "^3.2.25",
        "healthier": "^3.3.0",
        "husky": "^1.3.1",
        "jquery": "1.11.0",
        "jsdom": "^16.2.1",
        "lint-staged": "^8.2.1",
        "nodemon": "^1.19.4",
        "nyc": "^15.0.0",
        "pdfkit": "^0.11.0",
        "prettier": "^2.0.2",
        "rollup": "^2.22.1",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-globals": "^1.4.0",
        "rollup-plugin-svelte": "^5.2.3",
        "rollup-plugin-terser": "^6.1.0",
        "sinon": "^9.0.1",
        "svelte": "^2.16.1",
        "svg-to-pdfkit": "^0.1.8",
        "tap-xunit": "^2.4.1",
        "twemoji": "^13.0.0",
        "underscore-es": "^1.9.8"
    },
    "ava": {
        "files": [
            "!./src/tests/helpers/**/*"
        ],
        "babel": {
            "compileAsTests": [
                "./src/tests/helpers/**/*"
            ],
            "testOptions": {
                "plugins": [
                    [
                        "babel-plugin-module-resolver",
                        {
                            "cwd": "packagejson",
                            "alias": {
                                "jquery": "./src/tests/helpers/jquery.js"
                            }
                        }
                    ]
                ]
            }
        },
        "require": [
            "esm",
            "./src/tests/helpers/setup-browser-env.js"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "no-unneeded-ternary": "off",
            "prefer-const": "off"
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.html": [
                "healthier",
                "git add"
            ],
            "*.js": [
                "healthier",
                "prettier --check",
                "git add"
            ]
        },
        "ignore": [
            "**/static/*",
            "**/vendor/*"
        ]
    }
}
