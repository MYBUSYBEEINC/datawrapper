{
    "name": "@datawrapper/plugin-publish-cloud",
    "version": "1.0.0",
    "description": "Allows publishing of Datawrapper charts to various Cloud Storage providers ",
    "keywords": [
        "api",
        "datawrapper",
        "aws",
        "s3"
    ],
    "homepage": "https://github.com/datawrapper/plugin-publish-cloud#readme",
    "bugs": {
        "url": "https://github.com/datawrapper/plugin-publish-cloud/issues"
    },
    "author": "Datawrapper GmbH",
    "main": "api.js",
    "scripts": {
        "dev": "rollup -cw",
        "build": "rollup -c",
        "format": "prettier '*.js' 'src/**/*.js' --write",
        "lint": "healthier '*.js' 'src/**/*.{js,html}' && prettier --check '*.js' 'src/**/*.js'",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/datawrapper/plugin-publish-cloud.git"
    },
    "dependencies": {
        "@google-cloud/storage": "^4.7.0",
        "async": "^3.2.0",
        "aws-sdk": "^2.572.0",
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@datawrapper/controls": "^2.37.0",
        "@tivac/eslint-plugin-svelte": "^1.2.1",
        "babel-eslint": "^10.0.3",
        "eslint": "^5.16.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-node": "^9.1.0",
        "eslint-plugin-promise": "^4.1.1",
        "eslint-plugin-standard": "^4.0.0",
        "healthier": "^3.2.0",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.3",
        "prettier": "^1.19.1",
        "rollup": "^1.25.0",
        "rollup-plugin-buble": "^0.19.8",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-svelte": "^5.1.1",
        "rollup-plugin-terser": "^5.1.2",
        "svelte": "^2.16.1"
    },
    "lint-staged": {
        "*.js": [
            "git add"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 100,
        "semi": true,
        "tabWidth": 4
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": "warn",
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "no-undef": "warn",
            "no-unused-vars": "warn",
            "@tivac/svelte/property-ordering": "off",
            "@tivac/svelte/onupdate": "off"
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
