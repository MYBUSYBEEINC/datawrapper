{
    "name": "export-image",
    "version": "1.0.0",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "lint": "healthier 'src/**/*.{js,html}' && prettier --check 'src/**/*.{js,html}'",
        "lint:css": "stylelint 'src/**/*.css'",
        "format": "prettier --write 'src/**/*.{js,html,css}'"
    },
    "author": "",
    "license": "UNLICENSED",
    "dependencies": {
        "@datawrapper/controls": "^2.8.0",
        "@datawrapper/shared": "^0.12.2",
        "arg": "^2.0.0",
        "blob-stream": "^0.1.3",
        "btoa": "^1.2.1",
        "chroma-js": "^1.3.7",
        "data-uri-to-buffer": "^2.0.0",
        "downloadjs": "^1.4.7",
        "jsdom": "^11.11.0",
        "json-formatter-js": "^2.2.0",
        "queue-async": "^1.2.1",
        "svelte": "^2.7.0",
        "underscore-es": "^1.9.8"
    },
    "devDependencies": {
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.1.0",
        "eslint-plugin-html": "^6.0.0",
        "healthier": "^3.3.0",
        "husky": "^2.4.1",
        "import-sort-style-eslint": "^6.0.0",
        "lint-staged": "^8.2.1",
        "prettier": "^1.19.1",
        "prettier-plugin-import-sort": "0.0.3",
        "rollup": "^0.62.0",
        "rollup-plugin-alias": "^1.4.0",
        "rollup-plugin-buble": "^0.19.2",
        "rollup-plugin-commonjs": "^9.1.3",
        "rollup-plugin-json": "^3.0.0",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-globals": "^1.4.0",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-replace": "^2.0.0",
        "rollup-plugin-svelte": "^4.1.0",
        "rollup-plugin-uglify": "^4.0.0",
        "stylelint": "~10.1.0",
        "stylelint-config-standard": "~18.3.0"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "sort-imports": [
                "error"
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "indentation": 4
        }
    },
    "lint-staged": {
        "src/**/*.{js,html}": [
            "prettier --check",
            "healthier",
            "git add"
        ],
        "src/**/*.css": [
            "stylelint",
            "git add"
        ]
    }
}
