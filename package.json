{
    "name": "@datawrapper/plugin-d3-lines",
    "version": "1.3.2",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w"
    },
    "dependencies": {
        "d3-array": "^1.2.1",
        "d3-collection": "^1.0.4",
        "d3-color": "^1.1.0",
        "d3-interpolate": "^1.1.6",
        "d3-jetpack": "^2.0.19",
        "d3-scale": "^2.0.0",
        "d3-selection": "^1.3.0",
        "d3-shape": "^1.2.0",
        "d3-time-format": "^2.1.1",
        "moment": "^2.22.1",
        "numeral": "^2.0.6",
        "underscore-es": "^1.9.8"
    },
    "devDependencies": {
        "@datawrapper/shared": "^0.9.7",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.12.1",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.15.0",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.7",
        "prettier": "^1.17.1",
        "rollup": "^0.57.1",
        "rollup-plugin-buble": "^0.19.2",
        "rollup-plugin-commonjs": "^9.1.0",
        "rollup-plugin-json": "^2.3.0",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-uglify": "^3.0.0",
        "rollup-watch": "^4.3.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ],
        "linters": {
            "*.js": [
                "prettier --write",
                "eslint --fix",
                "git add"
            ]
        },
        "ignore": [
            "**/static/*"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
