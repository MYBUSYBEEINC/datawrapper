{
    "name": "@datawrapper/plugin-visualization-pie-chart",
    "version": "1.8.0",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "healthier 'src/**/*.{js,html}' && prettier --check 'src/**/*.js'",
        "build": "rollup -c",
        "dev": "rollup -c -w"
    },
    "devDependencies": {
        "@datawrapper/chart-core": "^8.18.8",
        "@datawrapper/controls": "^2.26.13",
        "@datawrapper/raphael-chart": "^1.0.0",
        "@datawrapper/shared": "^0.27.6",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.12.1",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-standard": "^4.0.0",
        "healthier": "^2.0.0",
        "numeral": "^2.0.6",
        "prettier": "^1.18.2",
        "rollup": "^1.20.1",
        "rollup-plugin-buble": "^0.19.6",
        "rollup-plugin-commonjs": "^9.3.4",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^4.2.3",
        "rollup-plugin-svelte": "^5.1.1",
        "rollup-plugin-terser": "^5.1.1",
        "underscore-es": "^1.9.8"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "eqeqeq": "warn",
            "no-use-before-define": "warn"
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "dependencies": {
        "svelte": "^2.16.1"
    }
}
