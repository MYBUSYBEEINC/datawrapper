{
    "name": "@datawrapper/plugin-visualization-column-charts",
    "version": "1.6.3",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w"
    },
    "dependencies": {
        "@datawrapper/chart-core": "^8.18.9",
        "@datawrapper/raphael-chart": "^1.0.2",
        "numeral": "^2.0.6",
        "underscore-es": "^1.9.8"
    },
    "devDependencies": {
        "@datawrapper/blocks": "^1.2.5",
        "@datawrapper/controls": "^2.30.0",
        "@datawrapper/shared": "^0.27.6",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.0.1",
        "chroma-js": "^2.0.6",
        "d3-array": "^1.2.4",
        "d3-jetpack": "^2.0.19",
        "d3-scale": "^2.2.2",
        "d3-selection": "^1.3.0",
        "d3-shape": "^1.3.5",
        "d3-time-format": "^2.2.3",
        "dayjs": "^1.8.16",
        "eslint": "^5.12.1",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-import": "^2.15.0",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.0",
        "prettier": "^1.18.2",
        "rollup": "^1.17.0",
        "rollup-plugin-buble": "^0.19.6",
        "rollup-plugin-commonjs": "^9.3.4",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-livereload": "^1.0.1",
        "rollup-plugin-node-resolve": "^4.2.3",
        "rollup-plugin-svelte": "^5.1.0",
        "rollup-plugin-terser": "^5.1.1",
        "rollup-watch": "^4.3.1",
        "svelte": "^2.16.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,html}": [
                "prettier --write",
                "healthier",
                "git add"
            ]
        },
        "ignore": [
            "static/**/*.js",
            "src/render/shared/symbolPolyfill.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    }
}
