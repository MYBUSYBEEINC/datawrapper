{
    "name": "@datawrapper/plugin-tables",
    "version": "2.1.0",
    "description": "One table to rule them all, powered by Svelte",
    "keywords": [],
    "license": "ISC",
    "author": "Datawrapper GmbH",
    "main": "index.js",
    "scripts": {
        "format": "prettier 'src/*.js' --write && npm run format:render && npm run format:controls",
        "lint": "prettier --check 'src/*.js' && healthier 'src/*.js' && npm run lint:render && npm run lint:controls",
        "test": "cd src/render && npm test",
        "test:watch": "cd src/render && npm run test:watch",
        "dev:render": "cd src/render && npm run dev",
        "build:render": "cd src/render && npm run build",
        "dev:controls": "cd src/controls && npm run dev",
        "build:controls": "cd src/controls && npm run build",
        "format:render": "cd src/render && npm run format",
        "lint:render": "cd src/render && npm run lint",
        "format:controls": "cd src/controls && npm run format",
        "lint:controls": "cd src/controls && npm run lint",
        "dev": "echo \"please run `npm run dev:render` and/or `npm run dev:controls`...\"",
        "build": "make build",
        "postinstall": "cd src/render && npm install && cd ../controls && npm install"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:datawrapper/plugin-tables.git"
    },
    "dependencies": {
        "@datawrapper/block-color-legend": "^1.0.1",
        "@datawrapper/block-color-scale": "^1.0.1",
        "babel-eslint": "^10.1.0"
    },
    "devDependencies": {
        "@datawrapper/eslint-config": "^0.1.1",
        "@datawrapper/prettier-config": "^1.0.0",
        "@datawrapper/shared": "^0.28.4",
        "eslint": "^7.22.0",
        "healthier": "^4.0.0",
        "husky": "^4.3.7",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git rev-parse HEAD > .githead && git add .githead"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier"
        ]
    },
    "prettier": "@datawrapper/prettier-config",
    "eslintConfig": {
        "extends": [
            "@datawrapper/eslint-config/chart-plugin"
        ]
    }
}
