{
    "name": "@datawrapper/scaffold",
    "version": "1.0.0",
    "description": "Quick-start tempates for various Datawrapper related code setups",
    "main": "index.js",
    "bin": "./index.js",
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/datawrapper/scaffold.git"
    },
    "author": "Datawrapper GmbH",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/datawrapper/scaffold/issues"
    },
    "homepage": "https://github.com/datawrapper/scaffold#readme",
    "dependencies": {
        "chalk": "^4.1.0",
        "compare-versions": "^3.6.0",
        "readline-promise": "^1.0.4"
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "eslint": "^7.14.0",
        "healthier": "^4.0.0",
        "prettier": "^2.2.0"
    },
    "scripts": {
        "lint": "prettier --check '**/*.{js}' && healthier '**/*.{js}'",
        "format": "prettier '**/*.{js}' --write"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "plugins": [
            "svelte3"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.svelte"
                ],
                "processor": "svelte3/svelte3",
                "rules": {
                    "import/first": "off"
                }
            }
        ],
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "prefer-const": "off"
        }
    }
}
