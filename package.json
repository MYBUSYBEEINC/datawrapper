{
    "name": "@datawrapper/plugin-d3-scatter-plot",
    "version": "1.2.0",
    "scripts": {
        "format": "prettier 'src/**/*.{js,html}' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "compile": "npm run build",
        "test": "ava",
        "test:watch": "ava -w"
    },
    "devDependencies": {
        "@datawrapper/blocks": "^1.0.3",
        "@datawrapper/controls": "^2.30.0",
        "@datawrapper/shared": "^0.27.8",
        "@rollup/plugin-alias": "^3.1.1",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "ava": "^3.11.1",
        "babel-eslint": "^10.1.0",
        "d3-array": "^1.2.1",
        "d3-collection": "^1.0.4",
        "d3-color": "^1.4.1",
        "d3-format": "^1.4.4",
        "d3-geo": "^1.12.1",
        "d3-jetpack": "^2.0.20",
        "d3-polygon": "^1.0.6",
        "d3-quadtree": "^1.0.7",
        "d3-scale": "^2.2.2",
        "d3-selection": "^1.4.2",
        "d3-shape": "^1.3.7",
        "d3-transition": "^1.3.2",
        "d3-voronoi": "^1.1.2",
        "d3-zoom": "^1.8.3",
        "dayjs": "^1.8.30",
        "eslint": "^7.5.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-html": "^6.0.2",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "esm": "^3.2.25",
        "healthier": "^4.0.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "numeral": "^2.0.6",
        "prettier": "^2.0.5",
        "rollup": "^2.23.0",
        "rollup-plugin-svelte": "^5.2.3",
        "rollup-plugin-terser": "^6.1.0",
        "svelte": "^2.16.1",
        "symbol-es6": "^0.1.2",
        "topojson-client": "^3.1.0",
        "underscore": "^1.11.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ],
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "no-unused-vars": [
                "error",
                {
                    "vars": "all"
                }
            ]
        }
    },
    "ava": {
        "require": [
            "esm"
        ]
    }
}
