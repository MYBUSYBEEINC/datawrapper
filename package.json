{
    "name": "@datawrapper/blocks",
    "version": "2.0.4",
    "description": "Collection of charting primitives used and developed by Datawrapper.",
    "keywords": [
        "visualisation",
        "d3",
        "data",
        "viz"
    ],
    "private": true,
    "homepage": "https://github.com/datawrapper/blocks#readme",
    "bugs": {
        "url": "https://github.com/datawrapper/blocks/issues"
    },
    "license": "UNLICENSED",
    "author": "Datawrapper GmbH",
    "files": [
        "dist",
        "lib",
        "src"
    ],
    "main": "lib/index.js",
    "scripts": {
        "lint": "lerna run lint",
        "format": "lerna run format",
        "prepublishOnly": "npm test",
        "test": "lerna run test",
        "test:watch": "lerna run test:watch --stream",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "lerna exec npm install && build-storybook",
        "lint:js": "eslint packages",
        "lint:css": "stylelint packages/**/*.css",
        "docs": "lerna exec --scope @datawrapper/block-xy-grid 'jsdoc2md --files src/*.js  -g grouped --separators > API.md'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/blocks.git"
    },
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "~7.11.6",
        "@storybook/addon-actions": "6.0.26",
        "@storybook/addon-knobs": "6.0.26",
        "@storybook/html": "6.0.26",
        "babel-eslint": "^10.1.0",
        "babel-loader": "~8.1.0",
        "eslint": "^7.14.0",
        "healthier": "^4.0.0",
        "husky": "~4.3.0",
        "lerna": "^3.22.1",
        "lint-staged": "~10.4.0",
        "postcss-cli": "~8.1.0",
        "postcss-import": "~12.0.1",
        "postcss-loader": "~4.0.4",
        "postcss-preset-env": "~6.7.0",
        "prettier": "^2.2.0",
        "stylelint": "~13.7.2",
        "stylelint-config-standard": "^20.0.0"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "prefer-const": "off"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test"
        }
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "indentation": 4
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier"
        ],
        "*.css": [
            "stylelint --fix --allow-empty-input"
        ]
    },
    "browserslist": [
        "last 2 versions",
        "not IE 10"
    ]
}
