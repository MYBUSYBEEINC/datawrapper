{
    "name": "@datawrapper/code",
    "version": "1.0.3",
    "description": "new home for all Datawrapper codes",
    "keywords": [],
    "homepage": "https://github.com/datawrapper/code#readme",
    "author": "Datawrapper GmbH",
    "files": [],
    "scripts": {
        "format": "scripts/format",
        "lint": "scripts/lint",
        "test": "cd utils/e2e-tests && npm test -- $@",
        "test:vis": "(cd libs/chart-core && npm test) && (cd plugins/d3-bars && npm test) && (cd plugins/d3-lines && npm test) && (cd plugins/vis-d3-maps && npm test) && (cd plugins/d3-pies && npm test) && (cd plugins/d3-scatter-plot && npm test) && (cd plugins/locator-maps && npm test) && (cd plugins/vis-tables && npm test) && (cd plugins/visualization-column-charts && npm test) && (cd plugins/visualization-pie-chart && npm test)",
        "test:ci": "cd utils/e2e-tests && npm run test:ci -- $@",
        "sync": "datawrapper-orm-sync",
        "api": "datawrapper-api",
        "crons": "crons",
        "render-client": "render-client",
        "render-server": "render-server",
        "update-translations": "node scripts/update-translations.js",
        "prepare": "scripts/husky-install",
        "drop-vis-cache": "node scripts/drop-vis-cache.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/core.git"
    },
    "devDependencies": {
        "@datawrapper/backend-utils": "file:libs/backend-utils",
        "@datawrapper/eslint-plugin-svelte3": "^4.1.1",
        "@datawrapper/orm": "file:libs/orm",
        "@datawrapper/service-utils": "file:libs/service-utils",
        "@tivac/eslint-plugin-svelte": "^3.1.0",
        "@typescript-eslint/eslint-plugin": "^5.46.0",
        "@typescript-eslint/parser": "^5.46.0",
        "arg": "^5.0.2",
        "chalk": "^4.1.2",
        "dotenv": "^10.0.0",
        "eslint": "^8.29.0",
        "eslint-plugin-compat": "^4.0.2",
        "eslint-plugin-html": "^7.1.0",
        "eslint-plugin-svelte3-security": "file:libs/eslint-plugin-svelte3-security",
        "fast-glob": "^3.2.12",
        "got": "^11.8.6",
        "husky": "^6.0.0",
        "ioredis": "^5.0.5",
        "lint-staged": "^8.2.1",
        "lodash": "^4.17.21",
        "prettier": "^2.8.1",
        "prettier-plugin-svelte": "^2.9.0",
        "shellcheck": "^1.1.0",
        "typescript": "^4.9.4"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none",
        "svelteSortOrder": "options-scripts-styles-markup"
    },
    "lint-staged": {
        "*.{html,svelte}": [
            "prettier --check",
            "eslint"
        ],
        "*.{js,ts,cjs,mjs}": [
            "prettier --write",
            "eslint"
        ],
        "*.sh": [
            "shellcheck"
        ]
    },
    "dependencies": {
        "joi": "^17.7.0"
    }
}
