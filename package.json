{
    "name": "@datawrapper/admin-users",
    "version": "1.0.0",
    "description": "Datawrapper plugin for managing users",
    "homepage": "https://github.com/datawrapper/plugin-admin-users#readme",
    "author": "Simon Jockers",
    "main": "static/admin-users.js",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "test": "ava",
        "test:watch": "ava --watch --verbose"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/plugin-admin-users.git"
    },
    "dependencies": {
        "@datawrapper/controls": "^2.3.1",
        "@datawrapper/shared": "^0.6.1"
    },
    "devDependencies": {
        "ava": "^1.4.1",
        "babel-eslint": "^10.0.1",
        "browser-env": "^3.2.6",
        "esm": "^3.2.22",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "less": "^3.9.0",
        "lint-staged": "^8.1.5",
        "prettier": "^1.17.0",
        "rollup": "^1.10.1",
        "rollup-plugin-buble": "^0.19.6",
        "rollup-plugin-commonjs": "^9.3.4",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^4.2.3",
        "rollup-plugin-svelte": "^5.0.3",
        "rollup-plugin-terser": "^4.0.4",
        "svelte": "^2.16.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,html}": [
                "prettier --write",
                "healthier",
                "git add"
            ]
        },
        "ignore": [
            "static/**/*.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    },
    "ava": {
        "require": [
            "esm",
            "./test/helpers/setup-browser-env.js",
            "./test/helpers/setup-svelte-compiler.js"
        ],
        "files": [
            "./src/**/*.test.js"
        ],
        "sources": [
            "./src/**/*.{js,html}"
        ]
    }
}
