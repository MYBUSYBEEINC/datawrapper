{
    "name": "@datawrapper/plugin-external-data",
    "scripts": {
        "format": "prettier 'src/{v2,v3}/**/*.{js,html,svelte}' --write",
        "lint": "healthier 'src/{v2,v3}/**/*.{js,html}' && prettier --check 'src/{v2,v3}/**/*.{js,html,svelte}'",
        "build:v2": "cd src/v2 && npm run build",
        "dev:v2": "cd src/v2 && npm run dev",
        "build:v3": "cd src/v3 && npm run build",
        "dev:v3": "cd src/v3 && npm run dev",
        "build": "npm run build:v2 && npm run build:v3"
    },
    "dependencies": {
        "@datawrapper/shared": "^0.27.7",
        "aws-sdk": "^2.706.0",
        "d3-queue": "^3.0.7",
        "got": "^11.7.0",
        "lodash": "^4.17.19"
    },
    "devDependencies": {
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.0.1",
        "eslint": "^6.6.0",
        "eslint-plugin-html": "^6.0.2",
        "eslint-plugin-svelte3": "^2.7.3",
        "healthier": "^3.2.0",
        "husky": "^2.4.0",
        "lint-staged": "^8.2.0",
        "prettier": "^1.19.1",
        "prettier-plugin-svelte": "^1.4.1",
        "svelte": "^3.29.0"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "@tivac/svelte/property-ordering": "off",
            "@tivac/svelte/onupdate": "off"
        },
        "parserOptions": {
            "ecmaVersion": 2019,
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "browser": true
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte",
            "svelte3"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier"
        ]
    }
}
