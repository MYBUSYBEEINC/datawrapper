{
    "name": "@datawrapper/plugin-external-data",
    "scripts": {
        "format:api": "prettier --plugin-search-dir=.  --write '*.js' 'src/lib/**/*.js'",
        "format:v2": "cd src/v2 && npm run format",
        "format:v3": "cd src/v3 && npm run format",
        "format": "npm run format:api && npm run format:v2 && npm run format:v3",
        "lint:api": "healthier '*.js' 'src/lib/**/*.js' && prettier --check '*.js' 'src/lib/*.js'",
        "lint:v2": "cd src/v2 && npm run lint",
        "lint:v3": "cd src/v3 && npm run lint",
        "lint": "npm run lint:api && npm run lint:v2 && npm run lint:v3",
        "build:v2": "cd src/v2 && npm run build",
        "build:v3": "cd src/v3 && npm run build",
        "build": "npm run build:v2 && npm run build:v3",
        "dev:v2": "cd src/v2 && npm run dev",
        "dev:v3": "cd src/v3 && npm run dev"
    },
    "dependencies": {
        "@datawrapper/shared": "^0.30.4",
        "aws-sdk": "^2.881.0",
        "d3-queue": "^3.0.7",
        "got": "^11.8.2",
        "lodash": "^4.17.19"
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "eslint": "^7.23.0",
        "healthier": "^4.0.0",
        "husky": "^6.0.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier"
        ]
    }
}
