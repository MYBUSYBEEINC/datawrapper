{
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "prettier --write",
                "healthier",
                "git add"
            ]
        },
        "ignore": [
            "**/static/*"
        ]
    },
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "watch-css": "chokidar ./src/styles/d3-pies.src.css -c \"npm run process-css\"",
        "process-css": "postcss ./src/styles/d3-pies.src.css --no-map --use autoprefixer -o ./static/d3-pies.css"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "no-unneeded-ternary": "off"
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "name": "d3-pies",
    "version": "1.1.0",
    "devDependencies": {
        "@tivac/eslint-plugin-svelte": "^1.2.1",
        "autoprefixer": "^9.5.0",
        "babel-eslint": "^10.0.1",
        "chokidar-cli": "^1.2.2",
        "eslint": "^5.16.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-html": "^5.0.3",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.1.1",
        "eslint-plugin-standard": "^4.0.0",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.5",
        "postcss-cli": "^6.1.2",
        "prettier": "^1.16.4",
        "rollup": "^1.8.0",
        "rollup-plugin-buble": "^0.19.6",
        "rollup-plugin-commonjs": "^9.3.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^4.0.1",
        "rollup-plugin-svelte": "^5.0.3",
        "rollup-plugin-uglify": "^6.0.2",
        "rollup-watch": "^4.3.1",
        "svelte": "^2.16.1"
    },
    "dependencies": {
        "@datawrapper/controls": "^2.0.10",
        "d3-color": "^1.2.3",
        "d3-jetpack": "^2.0.20",
        "d3-selection": "^1.4.0",
        "d3-shape": "^1.3.5",
        "numeral": "^2.0.6",
        "underscore-es": "^1.9.8"
    }
}
