{
    "name": "@datawrapper/plugin-d3-lines",
    "version": "1.5.0",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w"
    },
    "dependencies": {
        "d3-array": "^1.2.1",
        "d3-collection": "^1.0.4",
        "d3-color": "^1.1.0",
        "d3-interpolate": "^1.1.6",
        "d3-jetpack": "^2.0.19",
        "d3-scale": "^2.0.0",
        "d3-selection": "^1.3.0",
        "d3-shape": "^1.2.0",
        "d3-time-format": "^2.1.1",
        "dayjs": "^1.8.14",
        "deepmerge": "^4.2.2",
        "numeral": "^2.0.6",
        "rollup-plugin-livereload": "^1.3.0",
        "svelte": "^2.16.1",
        "underscore-es": "^1.9.8"
    },
    "devDependencies": {
        "@datawrapper/blocks": "^1.0.3",
        "@datawrapper/chart-core": "^8.18.8",
        "@datawrapper/controls": "^2.30.0",
        "@datawrapper/shared": "^0.27.6",
        "@rollup/plugin-alias": "^3.1.0",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^12.0.0",
        "@rollup/plugin-json": "^4.0.3",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.0.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-html": "^6.0.2",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "healthier": "^2.0.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.2",
        "prettier": "^1.19.1",
        "rollup": "^2.10.7",
        "rollup-plugin-svelte": "^5.2.2",
        "rollup-plugin-terser": "^5.3.0",
        "svelte2": "npm:svelte@^2.16.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,html}": [
            "prettier --write",
            "healthier"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    }
}
