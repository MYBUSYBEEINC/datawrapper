{
    "name": "@datawrapper/admin-render-network",
    "version": "1.0.0",
    "description": "",
    "main": "api.js",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "format": "prettier 'api.js' 'src/**/*.js' --write",
        "lint": "prettier --check 'api.js' 'src/**/*.js' && healthier 'api.js' 'src/**/*.{js,html}'",
        "test": "ava",
        "test:watch": "ava --watch --verbose"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@hapi/boom": "7.4.2",
        "@hapi/joi": "15.0.3"
    },
    "devDependencies": {
        "@datawrapper/controls": "^2.34.0",
        "@datawrapper/shared": "^0.27.6",
        "@tivac/eslint-plugin-svelte": "^1.2.1",
        "ava": "^1.4.1",
        "babel-eslint": "^10.0.1",
        "browser-env": "^3.2.6",
        "cash-dom": "^3.1.0",
        "dayjs": "^1.8.14",
        "eslint-plugin-html": "^5.0.3",
        "esm": "^3.2.22",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "less": "^3.9.0",
        "lint-staged": "^8.1.5",
        "pirates": "^4.0.1",
        "prettier": "^1.17.0",
        "rollup": "^1.10.1",
        "rollup-plugin-buble": "^0.19.6",
        "rollup-plugin-commonjs": "^9.3.4",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^4.2.3",
        "rollup-plugin-svelte": "^5.0.3",
        "rollup-plugin-terser": "^4.0.4",
        "sinon": "^7.3.2",
        "svelte": "^2.16.1",
        "svelte-transitions": "^1.2.0"
    },
    "peerDependencies": {
        "joi": "17.x"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    }
}
