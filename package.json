{
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "prettier --write",
                "healthier",
                "git add"
            ]
        },
        "ignore": [
            "**/static/*"
        ]
    },
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    },
    "name": "simple-maps",
    "version": "0.4.1",
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.4",
        "node-extend": "^0.2.0",
        "node.extend": "^2.0.0",
        "prettier": "^1.16.4",
        "rollup": "^0.57.0",
        "rollup-plugin-alias": "^1.5.1",
        "rollup-plugin-buble": "^0.19.2",
        "rollup-plugin-commonjs": "^8.4.1",
        "rollup-plugin-json": "^2.3.0",
        "rollup-plugin-node-resolve": "^3.2.0",
        "rollup-plugin-svelte": "^4.1.0",
        "rollup-plugin-uglify": "^3.0.0",
        "rollup-watch": "^4.3.1",
        "svelte": "^2.1.1",
        "svelte-extras": "^2.0.2"
    },
    "dependencies": {
        "d3-geo": "^1.10.0",
        "d3-jetpack": "^2.0.16",
        "d3-selection": "^1.3.0",
        "json-size": "^1.0.0",
        "topojson": "^3.0.2",
        "underscore-es": "^1.9.8"
    }
}
