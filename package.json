{
  "name": "@datawrapper/render-client",
  "version": "1.2.10",
  "description": "the Node app running on each client/worker in our pdf/png/svg export render farm. Uses Pupeteer & Chromium for client-side rendering of charts. Formerlly known as \"chromeshot\" ",
  "main": "index.js",
  "scripts": {
    "postinstall": "scripts/install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "render-client"
  },
  "bin": {
    "render-client": "scripts/start"
  },
  "files": [
    "src",
    "scripts",
    "config.tpl.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datawrapper/render-client.git"
  },
  "author": "Gregor Aisch",
  "bugs": {
    "url": "https://github.com/datawrapper/render-client/issues"
  },
  "homepage": "https://github.com/datawrapper/render-client#readme",
  "dependencies": {
    "@datawrapper/orm": "^1.3.0",
    "aws-sdk": "^2.359.0",
    "chalk": "^2.4.2",
    "gm": "^1.23.1",
    "json-socket": "^0.3.0",
    "mkdirp": "^0.5.1",
    "puppeteer": "^1.10.0",
    "request": "^2.88.0",
    "underscore-es": "^1.9.8",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.1",
    "husky": "^1.3.1",
    "nodemon": "^1.18.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "semi": true,
    "printWidth": 100,
    "singleQuote": true
  }
}
