{
    "name": "@datawrapper/plugin-tables",
    "version": "2.1.0",
    "description": "One table to rule them all, powered by Svelte",
    "keywords": [],
    "license": "ISC",
    "author": "Datawrapper GmbH",
    "main": "index.js",
    "scripts": {
        "format": "prettier 'src/{render,controls}/*.{js,html}' --write",
        "lint": "prettier --check 'src/{render,controls}/*.{js,html}' && healthier 'src/{render,controls}/*.{js,html}'",
        "test": "cd src/render && npm test",
        "test:watch": "cd src/render && npm run test:watch",
        "dev:render": "cd src/render && npm run dev",
        "build:render": "cd src/render && npm run build",
        "dev:controls": "cd src/controls && npm run dev",
        "build:controls": "cd src/controls && npm run build",
        "dev": "echo \"please run `npm run dev:render` and/or `npm run dev:controls`...\"",
        "build": "make build",
        "postinstall": "cd src/render && npm install && cd ../controls && npm install"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:datawrapper/plugin-tables.git"
    },
    "dependencies": {
        "@datawrapper/block-color-legend": "^1.0.1",
        "@datawrapper/block-color-scale": "^1.0.1"
    },
    "devDependencies": {
        "@datawrapper/shared": "^0.28.4",
        "@tivac/eslint-plugin-svelte": "^1.2.1",
        "babel-eslint": "^10.1.0",
        "eslint-plugin-html": "^5.0.5",
        "eslint-plugin-svelte3": "^1.2.3",
        "healthier": "^2.0.0",
        "husky": "^4.3.7",
        "lint-staged": "^10.5.3",
        "prettier": "^1.19.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git rev-parse HEAD > .githead && git add .githead"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "@tivac/svelte/property-ordering": "off",
            "@tivac/svelte/onupdate": "off"
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    }
}
