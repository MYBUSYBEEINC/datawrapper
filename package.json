{
    "name": "@datawrapper/plugin-copy-to-local",
    "version": "2.0.0",
    "description": "Provides an admin user interface to copy charts from another Datawrapper instance",
    "main": "api.js",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "format": "prettier '**/*.{js,svelte}' --write",
        "lint": "healthier '**/*.{js,html}' && prettier --check '**/*.js'"
    },
    "dependencies": {
        "@datawrapper/controls": "^2.33.11",
        "@datawrapper/shared": "^0.28.5",
        "@hapi/boom": "^9.1.1",
        "esm": "^3.2.25",
        "node-fetch": "^2.6.1",
        "svelte": "^3.31.2"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.1",
        "@tivac/eslint-plugin-svelte": "^2.0.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.17.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-html": "^6.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "healthier": "^4.0.0",
        "husky": "^4.3.7",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "rollup": "^2.36.1",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.2"
    },
    "peerDependencies": {
        "joi": "17.x"
    },
    "eslintConfig": {
        "root": true,
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,html}": [
            "healthier",
            "prettier --check"
        ]
    }
}
