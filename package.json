{
    "name": "d3-maps-build",
    "version": "1.0.0",
    "scripts": {
        "format": "prettier 'src/**/*.{js,html}' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w"
    },
    "dependencies": {
        "@hapi/boom": "^9.1.0",
        "@hapi/joi": "17.1.1",
        "d3-array": "^1.2.1",
        "d3-collection": "^1.0.4",
        "d3-color": "^1.0.3",
        "d3-format": "^1.2.2",
        "d3-geo": "^1.12.1",
        "d3-geo-projection": "^2.9.0",
        "d3-jetpack": "^2.0.16",
        "d3-scale": "^2.0.0",
        "d3-selection": "^1.4.1",
        "d3-transition": "^1.1.1",
        "d3-zoom": "^1.8.3",
        "got": "^10.7.0",
        "numeral": "^2.0.6",
        "topojson": "^3.0.2",
        "underscore-es": "^1.9.8"
    },
    "devDependencies": {
        "@datawrapper/blocks": "^0.14.2",
        "@datawrapper/chart-core": "^8.16.0",
        "@datawrapper/controls": "^2.22.2",
        "@datawrapper/shared": "^0.26.0",
        "@rollup/plugin-alias": "^3.1.1",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^13.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.0.1",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.0.3",
        "d3-hexbin": "^0.2.2",
        "d3-polygon": "^1.0.6",
        "d3-quadtree": "^1.0.7",
        "eslint": "^5.12.1",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-import": "^2.15.0",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "healthier": "^3.2.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.2.1",
        "lodash-es": "^4.17.15",
        "prettier": "^1.19.1",
        "rollup": "^2.17.1",
        "rollup-plugin-svelte": "^5.1.0",
        "rollup-plugin-terser": "^5.1.3",
        "rollup-watch": "^4.3.1",
        "svelte2": "npm:svelte@^2.16.1",
        "topojson-client": "^3.0.0",
        "topojson-simplify": "^3.0.3",
        "underscore": "^1.9.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ],
        "linters": {
            "*.js": [
                "eslint --fix",
                "git add"
            ]
        },
        "ignore": [
            "static/*"
        ]
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    }
}
