{
    "name": "@datawrapper/blocks",
    "version": "0.14.22",
    "description": "Collection of charting primitives used and developed by Datawrapper.",
    "keywords": [
        "visualisation",
        "d3",
        "data",
        "viz"
    ],
    "homepage": "https://github.com/datawrapper/blocks#readme",
    "bugs": {
        "url": "https://github.com/datawrapper/blocks/issues"
    },
    "license": "UNLICENSED",
    "author": "Datawrapper GmbH",
    "contributors": [
        {
            "name": "Fabian Gündel"
        },
        {
            "name": "Gregor Aisch"
        }
    ],
    "files": [
        "lib",
        "src"
    ],
    "main": "lib/index.js",
    "scripts": {
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "format": "prettier 'src/**/*.js' --write",
        "prepublishOnly": "npm test && npm run build",
        "build:js": "node scripts/compile.js",
        "build:css": "postcss src/**/*.css -d lib",
        "build": "rm -rf lib/* && npm run build:js & npm run build:css",
        "test": "ava --verbose",
        "test:watch": "ava --watch",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "lint:js": "eslint src",
        "lint:css": "stylelint src/**/*.css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/blocks.git"
    },
    "dependencies": {
        "@datawrapper/shared": "^0.27.6",
        "budu": "1.0.0",
        "d3-array": "^2.3.1",
        "d3-color": "^1.2.3",
        "d3-interpolate": "^1.3.2",
        "d3-jetpack": "^2.0.20",
        "d3-scale": "^3.0.0",
        "d3-selection": "1.4.0",
        "lodash": "^4.17.15",
        "lodash.countby": "^4.6.0",
        "lodash.debounce": "^4.0.8"
    },
    "devDependencies": {
        "@babel/core": "~7.4.5",
        "@storybook/addon-actions": "5.1.9",
        "@storybook/addon-knobs": "5.1.9",
        "@storybook/html": "5.1.9",
        "ava": "2.4.0",
        "babel-eslint": "~10.0.3",
        "babel-loader": "~8.0.6",
        "browser-env": "~3.2.6",
        "buble": "^0.19.8",
        "chroma-js": "^2.0.6",
        "d3-axis": "^1.0.12",
        "d3-drag": "~1.2.3",
        "d3-geo": "^1.11.6",
        "d3-random": "^2.0.0",
        "d3-shape": "^1.3.5",
        "deepmerge": "^3.2.1",
        "diffable-html": "~4.0.0",
        "eslint": "^6.0.1",
        "esm": "~3.2.25",
        "fs-extra": "~8.0.1",
        "glob": "~7.1.4",
        "healthier": "~2.0.0",
        "humps": "~2.0.1",
        "husky": "~2.4.1",
        "lint-staged": "~8.2.1",
        "postcss-cli": "~6.1.2",
        "postcss-import": "~12.0.1",
        "postcss-loader": "~3.0.0",
        "postcss-preset-env": "~6.6.0",
        "prettier": "~1.18.2",
        "raf": "~3.4.1",
        "seedrandom": "^3.0.3",
        "stylelint": "~10.1.0",
        "stylelint-config-standard": "~18.3.0",
        "tap-xunit": "~2.4.1",
        "topojson": "^3.0.2",
        "topojson-client": "^3.0.0"
    },
    "peerDependencies": {
        "d3-array": "1.2.4 || ^2.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "umd:main": "dist/index.umd.js",
    "module": "dist/index.mjs",
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test"
        }
    },
    "ava": {
        "snapshotDir": "./test/__SNAPSHOTS__",
        "require": [
            "esm",
            "./test/helpers/setup-browser-env.js"
        ],
        "helpers": [
            "**/helpers/**/*",
            "**/fixtures/**/*"
        ]
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "indentation": 4
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ],
        "*.css": [
            "stylelint --fix",
            "git add"
        ]
    },
    "browserslist": [
        "last 2 versions",
        "not IE 10"
    ]
}
