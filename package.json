{
    "name": "d3-bars",
    "version": "2.0.0",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w"
    },
    "devDependencies": {
        "@datawrapper/block-get-color": "^1.0.1",
        "@datawrapper/controls": "^2.35.2",
        "@datawrapper/eslint-config": "^0.1.1",
        "@datawrapper/prettier-config": "^1.0.0",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.0.3",
        "eslint": "^6.6.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-standard": "^4.0.1",
        "healthier": "^3.2.0",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.2",
        "prettier": "^1.18.2",
        "rollup": "^2.27.1",
        "rollup-plugin-svelte": "^5.2.3",
        "rollup-plugin-terser": "^6.1.0",
        "svelte": "^2.16.1"
    },
    "dependencies": {
        "@datawrapper/block-color-legend": "^1.2.0",
        "@datawrapper/shared": "^0.34.2",
        "d3-array": "^1.2.4",
        "d3-collection": "^1.0.7",
        "d3-color": "^1.4.0",
        "d3-interpolate": "^1.3.2",
        "d3-jetpack": "^2.0.20",
        "d3-scale": "^2.2.2",
        "d3-selection": "^1.4.0",
        "dayjs": "^1.10.3",
        "lodash-es": "^4.17.15",
        "numeral": "^2.0.6",
        "svelte": "^2.16.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git rev-parse HEAD > .githead && git add .githead"
        }
    },
    "lint-staged": {
        "*.{js,html}": [
            "prettier --write",
            "healthier",
            "git add"
        ]
    },
    "prettier": "@datawrapper/prettier-config",
    "eslintConfig": {
        "parser": "babel-eslint",
        "extends": [
            "@datawrapper/eslint-config/chart-plugin",
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    }
}
