{
  "name": "@datawrapper/blocks",
  "version": "0.0.1",
  "description": "Collection of charting primitives used and developed by Datawrapper.",
  "main": "lib/index.js",
  "files": ["lib"],
  "scripts": {
    "prepublish": "npm test && npm run build",
    "build": "rm -rf lib/* && node scripts/compile.js",
    "test": "echo \"Error: no test specified\" && exit 0",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "eslint src",
    "format": "prettier src/**/*.js --write && eslint src --fix"
  },
  "prettier": {
    "tabWidth": 4,
    "semi": true,
    "printWidth": 100,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datawrapper/blocks.git"
  },
  "keywords": [
    "visualisation",
    "d3",
    "data",
    "viz"
  ],
  "author": "Fabian GÃ¼ndel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/datawrapper/blocks/issues"
  },
  "homepage": "https://github.com/datawrapper/blocks#readme",
  "dependencies": {
    "d3": "5.7.0"
  },
  "devDependencies": {
    "@babel/core": "~7.2.0",
    "@storybook/html": "~4.0.12",
    "babel-loader": "~8.0.4",
    "buble": "^0.19.6",
    "eslint": "~5.10.0",
    "eslint-config-standard": "~12.0.0",
    "eslint-plugin-import": "~2.14.0",
    "eslint-plugin-node": "~8.0.0",
    "eslint-plugin-promise": "~4.0.1",
    "eslint-plugin-standard": "~4.0.0",
    "husky": "~1.2.0",
    "lint-staged": "~8.1.0",
    "prettier": "~1.15.3"
  }
}
