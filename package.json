{
    "name": "@datawrapper/plugin-tables",
    "version": "2.0.0",
    "description": "One table to rule them all, powered by Svelte",
    "keywords": [],
    "license": "ISC",
    "author": "Datawrapper GmbH",
    "main": "index.js",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "rollup -cw",
        "build": "rollup -c"
    },
    "dependencies": {
        "@datawrapper/controls": "^2.3.0",
        "@datawrapper/shared": "^0.4.0",
        "dayjs": "^1.8.12",
        "fecha": "^3.0.2",
        "lodash.uniq": "^4.5.0",
        "moment": "^2.24.0",
        "numeral": "^2.0.6"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.5",
        "lodash.foreach": "^4.5.0",
        "lodash.isboolean": "^3.0.3",
        "lodash.isdate": "^4.0.1",
        "lodash.isnumber": "^3.0.3",
        "prettier": "^1.16.4",
        "rollup": "^1.10.0",
        "rollup-plugin-alias": "^1.5.1",
        "rollup-plugin-buble": "^0.19.6",
        "rollup-plugin-commonjs": "^9.3.4",
        "rollup-plugin-json": "^3.1.0",
        "rollup-plugin-less": "^1.1.2",
        "rollup-plugin-node-resolve": "^4.2.3",
        "rollup-plugin-svelte": "^5.0.3",
        "rollup-plugin-terser": "^4.0.4",
        "svelte": "^2.16.1",
        "underscore": "^1.9.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ],
        "ignore": [
            "*.min.js",
            "**/vendor/**/.js",
            "static/*.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
