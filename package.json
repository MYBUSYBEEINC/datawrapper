{
    "name": "@datawrapper/core",
    "version": "1.0.1",
    "description": "Datawrapper 2.0 core (ORM, API, Crons, ...) -- as submodules",
    "author": "Datawrapper GmbH",
    "homepage": "https://github.com/datawrapper/core#readme",
    "files": [],
    "keywords": [],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/core.git"
    },
    "devDependencies": {
        "@datawrapper/orm": "^3.26.0",
        "@datawrapper/service-utils": "^1.3.1",
        "babel-eslint": "^10.0.1",
        "chalk": "^2.4.2",
        "dotenv": "^10.0.0",
        "fast-glob": "^3.2.7",
        "got": "^11.8.2",
        "healthier": "^3.3.0",
        "less": "^3.10.3",
        "lodash": "^4.17.21",
        "prettier": "^2.0.5",
        "rollup-plugin-buble": "^0.19.8",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-svelte": "^5.1.0",
        "rollup-plugin-uglify": "^6.0.4"
    },
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "test": "echo \"Error: no test specified\" && exit 1",
        "sync": "datawrapper-orm-sync",
        "api": "datawrapper-api",
        "crons": "crons",
        "render-client": "render-client",
        "render-server": "render-server",
        "update-translations": "node scripts/update-translations.js"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
