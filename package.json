{
    "name": "@datawrapper/core",
    "version": "1.0.1",
    "description": "Datawrapper 2.0 core (ORM, API, Crons, ...) -- as submodules",
    "keywords": [],
    "homepage": "https://github.com/datawrapper/core#readme",
    "author": "Datawrapper GmbH",
    "files": [],
    "scripts": {
        "format": "prettier --plugin-search-dir=. '**/*.{js,cjs,mjs,html,svelte}' --write",
        "lint": "prettier --check '**/*.{js,cjs,mjs,html,svelte}'",
        "test": "echo \"Error: no test specified\" && exit 1",
        "sync": "datawrapper-orm-sync",
        "api": "datawrapper-api",
        "crons": "crons",
        "render-client": "render-client",
        "render-server": "render-server",
        "update-translations": "node scripts/update-translations.js",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/core.git"
    },
    "devDependencies": {
        "@datawrapper/orm": "^3.28.0",
        "@datawrapper/service-utils": "^1.3.1",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.1.0",
        "chalk": "^4.1.2",
        "dotenv": "^10.0.0",
        "eslint": "^7.32.0",
        "eslint-plugin-html": "^6.1.2",
        "eslint-plugin-svelte3": "^3.2.1",
        "fast-glob": "^3.2.7",
        "got": "^11.8.2",
        "husky": "^6.0.0",
        "less": "^4.1.1",
        "lodash": "^4.17.21",
        "prettier": "^2.4.1",
        "prettier-plugin-svelte": "^2.4.0",
        "rollup-plugin-buble": "^0.19.8",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-svelte": "^5.1.0",
        "rollup-plugin-uglify": "^6.0.4",
        "svelte": "^3.42.6"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none",
        "svelteSortOrder": "options-scripts-styles-markup"
    },
    "lint-staged": {
        "*.{html,svelte}": [
            "prettier --check",
            "eslint"
        ],
        "*.{js,cjs,mjs}": [
            "prettier --write",
            "eslint"
        ]
    },
    "dependencies": {
        "joi": "^17.4.0"
    }
}
