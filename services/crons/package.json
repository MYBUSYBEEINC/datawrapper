{
    "name": "@datawrapper/crons",
    "author": "Datawrapper GmbH",
    "version": "1.9.0",
    "description": "A collection of tasks that our server performs regularly in the background",
    "main": "src/index.js",
    "scripts": {
        "format": "prettier src/**/*.js --write && eslint src --fix",
        "lint": "eslint src",
        "test": "DW_CONFIG_PATH=test/_config.test.js ava",
        "dev": "nodemon src/index.js",
        "sync": "datawrapper-orm-sync",
        "start": "scripts/start"
    },
    "files": [
        "src",
        "scripts",
        "config.tpl.js"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/datawrapper-crons.git"
    },
    "dependencies": {
        "@datawrapper/orm": "^3.26.0",
        "@datawrapper/schemas": "^1.14.0",
        "@datawrapper/service-utils": "^1.3.1",
        "@hapi/catbox": "^11.1.1",
        "@hapi/catbox-memory": "^5.0.1",
        "@hapi/catbox-redis": "^6.0.2",
        "chalk": "^4.1.2",
        "d3-array": "^3.0.4",
        "lodash.shuffle": "^4.2.0",
        "mysql2": "^1.6.4",
        "node-cron": "^2.0.3",
        "underscore": "^1.9.1",
        "winston": "^3.2.0"
    },
    "bugs": {
        "url": "https://github.com/datawrapper/datawrapper-crons/issues"
    },
    "homepage": "https://github.com/datawrapper/datawrapper-crons#readme",
    "directories": {
        "doc": "docs"
    },
    "devDependencies": {
        "@datawrapper/shared": "^0.27.6",
        "ava": "^3.5.0",
        "babel-eslint": "^10.0.1",
        "dotenv": "^8.2.0",
        "eslint": "^5.12.1",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.1",
        "nodemon": "^1.18.7",
        "prettier": "^1.16.1"
    },
    "license": "MIT",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "ava": {
        "files": [
            "**/*.test.js"
        ],
        "snapshotDir": "test/__snapshots__"
    }
}
