{
    "name": "@datawrapper/frontend",
    "version": "2.0.0",
    "description": "The new Datawrapper frontend service using hapi",
    "scripts": {
        "build": "npm run build:js && npm run build:css",
        "build:js": "NODE_OPTIONS=--max-old-space-size=8192 rollup -c",
        "build:css": "sass --no-source-map src/styles/index.scss static/datawrapper.css",
        "build:css-bulma-polyfill": "sass --no-source-map src/styles/index-bulma-polyfill.scss static/css/bulma-polyfill.css",
        "watch": "npm run watch:js",
        "watch:js": "npm run build:js -- --watch",
        "watch:css": "npm run build:css -- --watch",
        "dev": "npm run watch",
        "clear-view-cache": "rm .viewcache/*.json",
        "lint": "cd ../.. && scripts/lint services/frontend",
        "format": "cd ../.. && scripts/format services/frontend",
        "test": "rollup -c rollup.test.config.js && npx mocha",
        "test:watch-rollup": "rollup -wc rollup.test.config.js",
        "test:watch-mocha": "mocha --watch",
        "build:hello": "rm -Rf build/hello && TARGET=hello npm run build && TARGET=_partials/svelte2 npm run build && node scripts/build-hello.js"
    },
    "dependencies": {
        "@datawrapper/chart-core": "file:../../libs/chart-core",
        "@datawrapper/icons": "^1.21.3",
        "@datawrapper/locales": "file:../../libs/locales",
        "@datawrapper/orm": "file:../../libs/orm",
        "@datawrapper/polyfills": "file:../../libs/polyfills",
        "@datawrapper/schemas": "file:../../libs/schemas",
        "@datawrapper/service-utils": "file:../../libs/service-utils",
        "@datawrapper/shared": "^0.51.0",
        "@el3um4s/svelte-get-component-info": "^0.0.16",
        "@hapi/bell": "^12.2.0",
        "@hapi/boom": "^9.1.3",
        "@hapi/catbox-memory": "^5.0.1",
        "@hapi/catbox-redis": "^6.0.2",
        "@hapi/hapi": "^20.2.2",
        "@hapi/hoek": "^9.2.0",
        "@hapi/inert": "^6.0.5",
        "@hapi/vision": "^6.1.0",
        "@rollup/plugin-alias": "^3.1.9",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-replace": "^4.0.0",
        "assign-deep": "^1.0.1",
        "async": "^3.2.0",
        "chokidar": "^3.5.1",
        "codemirror": "^5.65.2",
        "dayjs": "^1.10.7",
        "ejs": "^3.1.6",
        "fast-glob": "^3.2.11",
        "fs-extra": "^10.0.0",
        "glob-parent": "^6.0.2",
        "got": "^11.5.2",
        "hapi-dev-errors": "^4.0.0",
        "hapi-pino": "^8.3.0",
        "hapi-plugin-websocket": "^2.3.5",
        "hapi-sentry": "^3.2.0",
        "ioredis": "^5.0.4",
        "jsesc": "^3.0.1",
        "jsonlint": "^1.6.3",
        "less": "^3.13.1",
        "lodash": "^4.17.20",
        "numeral": "^2.0.6",
        "openid-client": "^4.9.0",
        "passport-saml": "^3.2.1",
        "pug": "^3.0.1",
        "requirejs": "^2.3.6",
        "rollup": "^2.72.1",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "rss-parser": "^3.12.0",
        "sass": "^1.42.1",
        "snarkdown": "^2.0.0",
        "svelte": "^3.46.4",
        "svelte-preprocess": "^4.10.4",
        "tempfile": "^3.0.0",
        "underscore": "^1.12.0"
    },
    "devDependencies": {
        "@rollup/plugin-multi-entry": "^4.1.0",
        "@sinonjs/fake-timers": "^9.1.2",
        "@testing-library/svelte": "^3.0.3",
        "bulma": "^0.9.3",
        "chai": "^4.3.4",
        "chai-dom": "^1.10.0",
        "jsdom": "^18.1.0",
        "mocha": "^9.1.3",
        "nock": "^13.2.4",
        "sinon-chai": "^3.7.0",
        "svelte-highlight": "^6.1.0"
    },
    "mocha": {
        "spec": "build/bundle-tests.js",
        "require": [
            "chai/register-expect",
            "chai/register-should",
            "./src/test-utils/setup-browser-env.mjs",
            "source-map-support/register"
        ]
    }
}
