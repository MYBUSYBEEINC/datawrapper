{
    "name": "@datawrapper/chart-core",
    "version": "8.46.0",
    "description": "Svelte component to render charts. Used by Sapper App and Node API.",
    "main": "index.js",
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=7.0.0"
    },
    "files": [
        "dist",
        "lib"
    ],
    "scripts": {
        "format": "cd ../.. && scripts/format libs/chart-core",
        "build": "rollup -c rollup.config.js",
        "dev": "rollup -c -w rollup.config.js",
        "lint": "cd ../.. && scripts/lint libs/chart-core",
        "prepublishOnly": "npm run build",
        "test": "ava",
        "docs:parser": "jsdoc2md  --template docs/.tpl.hbs --files 'lib/dw/utils/parser.js' -g grouped  | sed '/\\*\\*Kind\\*\\*/d'  | sed '/\\*\\*Example\\*\\*/d' | sed '/## $/d' | sed 's/## \\([a-z]\\)/### \\1/' > docs/parser.md && node docs/.fix.js parser.md"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/chart-core.git"
    },
    "author": "",
    "bugs": {
        "url": "https://github.com/datawrapper/chart-core/issues"
    },
    "homepage": "https://github.com/datawrapper/chart-core#readme",
    "dependencies": {
        "@datawrapper/expr-eval": "^2.0.4",
        "@datawrapper/polyfills": "file:../polyfills",
        "@datawrapper/shared": "^0.43.1",
        "@emotion/css": "^11.1.3",
        "core-js": "3.6.5",
        "deepmerge": "^4.2.2",
        "fontfaceobserver": "2.1.0",
        "numeral": "^2.0.6",
        "svelte-extras": "^2.0.2",
        "svelte2": "npm:svelte@^2.16.1",
        "underscore": "^1.13.1"
    },
    "devDependencies": {
        "@babel/core": "7.9.0",
        "@babel/plugin-transform-runtime": "7.9.0",
        "@babel/preset-env": "7.9.5",
        "@babel/runtime": "7.9.2",
        "@rollup/plugin-alias": "^3.1.2",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.1.3",
        "@rollup/plugin-replace": "^3.0.1",
        "ava": "^3.8.1",
        "babel-plugin-transform-async-to-promises": "0.8.15",
        "jsdoc-to-markdown": "^5.0.0",
        "lint-staged": "^12.1.2",
        "node-fetch": "^2.6.0",
        "rollup": "^2.64.0",
        "rollup-plugin-babel": "4.4.0",
        "rollup-plugin-svelte": "5.2.1",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "3.23.2"
    },
    "ava": {
        "nodeArguments": [
            "--experimental-specifier-resolution=node"
        ]
    },
    "optionalDependencies": {
        "fsevents": "^2.3.2"
    }
}
