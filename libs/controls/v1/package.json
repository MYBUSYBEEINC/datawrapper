{
    "name": "@datawrapper/controls",
    "version": "1.1.3",
    "scripts": {
        "format": "prettier 'src/**/*.{js,html}' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "test": "ava",
        "test:watch": "ava --watch --verbose"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/datawrapper/controls.git"
    },
    "dependencies": {},
    "devDependencies": {},
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 150,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,html}": [
                "prettier --write",
                "healthier",
                "git add"
            ]
        },
        "ignore": [
            "*.min.js",
            "**/dw-2.0.js",
            "**/vendor/**/.js",
            "www/static/js/svelte/**/*.js"
        ]
    },
    "ava": {
        "require": [
            "esm",
            "./test/helpers/setup-browser-env.js",
            "./test/helpers/setup-svelte-compiler.js"
        ],
        "files": [
            "./src/**/*.test.js"
        ],
        "sources": [
            "./src/**/*.{js,html}"
        ]
    }
}
